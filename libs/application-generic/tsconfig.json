{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "build/main",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "es6",
    "esModuleInterop": true,
    "rootDir": "src",
    "strict": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
