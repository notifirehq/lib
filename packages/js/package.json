{
  "name": "@novu/js",
  "version": "0.24.2",
  "repository": "https://github.com/novuhq/novu",
  "description": "Novu's JavaScript SDK for building custom inbox notification experiences",
  "author": "",
  "license": "ISC",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/*",
    "dist/esm/*",
    "dist/cjs/*"
  ],
  "sideEffects": false,
  "private": true,
  "scripts": {
    "start": "pnpm run build -- --watch --sourcemap",
    "build": "tsup && pnpm run post:build",
    "post:build": "node scripts/size-limit.js",
    "lint": "eslint --ext .ts,.tsx src",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.12",
    "bytes-iec": "^3.1.1",
    "chalk": "^5.3.0",
    "esbuild-plugin-compress": "^1.0.1",
    "jest": "^29.3.1",
    "tiny-glob": "^0.2.9",
    "ts-jest": "^29.0.3",
    "tsup": "^8.0.2",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@novu/client": "workspace:*",
    "mitt": "^3.0.1"
  }
}
