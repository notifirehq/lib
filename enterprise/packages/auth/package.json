{
  "name": "@novu/ee-auth",
  "version": "0.24.2",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "node ./check-ee.mjs",
    "build:esm": "node_modules/.bin/tsc -p tsconfig.json",
    "build:watch": "node_modules/.bin/tsc -w -p tsconfig.json",
    "lint": "eslint src --no-error-on-unmatched-pattern",
    "test": "echo 'skip test in the ci'",
    "test-ee": "cross-env TS_NODE_COMPILER_OPTIONS='{\"strictNullChecks\": false}' TZ=UTC NODE_ENV=test E2E_RUNNER=true mocha --timeout 10000 --require ts-node/register --exit --file tests/setup.ts src/**/**/*.spec.ts"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.9",
    "@novu/dal": "workspace:*",
    "@novu/shared": "workspace:*",
    "mongoose": "^7.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "jwks-rsa": "^3.1.0",
    "svix": "^1.24.0"
  },
  "devDependencies": {
    "@clerk/types": "^4.5.1",
    "@types/mocha": "^8.0.1",
    "@types/node": "^14.6.0",
    "@types/passport-jwt": "^3.0.3",
    "cross-env": "^7.0.3",
    "mocha": "^8.1.1",
    "ts-node": "~10.9.1",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "@nestjs/common": "10.2.2",
    "@nestjs/core": ">=10",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "9.0.3",
    "@nestjs/swagger": "^7.1.9",
    "passport": "0.6.0",
    "passport-jwt": "^4.0.0"
  }
}
