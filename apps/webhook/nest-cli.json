{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": ".env",
        "outDir": "dist/src"
      },
      {
        "include": ".env.development",
        "outDir": "dist/src"
      },
      {
        "include": ".env.test",
        "outDir": "dist/src"
      },
      {
        "include": ".env.production",
        "outDir": "dist/src"
      }
    ],
    "plugins": [],
    "builder": {
      "type": "swc",
      "options": {
        "stripLeadingPaths": true
      }
    },
    "typeCheck": true
  }
}
